<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h2>Create a new listings</h2>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" class="form-control" placeholder="enter title" required>
            <div class="invalid-feedback">Please enter correct title</div>
        </div>
        <br>
        <div class="md-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter correct Description</div>
        </div>
        <br>
<!--
        <div class="md-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="image" class="form-control" placeholder="Enter Image-URL" >
        </div>
        <br>
-->
        <div class="md-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" name="image" class="form-control" required />
            
        </div>
        <br>
        <div class="row">
            <div class="md-3 col-md-4">
                <label for="number" class="form-label">Price</label>
                <input type="number"  name="price"  class="form-control" placeholder="enter price" required>
                <div class="invalid-feedback">Please enter correct Price</div>
            </div>
            <br>
            <div class="md-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input type="text" name="country" class="form-control" placeholder="enter country" required>
                <div class="invalid-feedback">Please enter correct country name </div>
            </div>
        </div>
        <br>
        <div class="md-3">
            <label for="location" class="form-label">Location</label>
            <input type="text"  name="location" class="form-control" placeholder="enter location" required>
            <div class="invalid-feedback">Please enter correct location</div>
        </div>
        <br><br>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
    </div>
</div>