<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Edit your listings</h2>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT"  novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" value="<%= listing.title %>" name="title"  class="form-control" required>
            <div class="invalid-feedback">Please enter correct Title</div>
        </div>

        <div class="md-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" value="<%=listing.description%>" class="form-control" required> </textarea>
            <div class="invalid-feedback">Please enter correct Description</div>
        </div>

        <div class="md-3">
            Original Listing Image  <br>
            <img src="<%= originalImageUrl %>" >
        </div>


        <div class="md-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" value="<%= listing.image %>" name="image" class="form-control" >
            <div class="invalid-feedback">Please enter correct URL</div>
        </div>


        <div class="row">
            <div class="md-3 col-md-4">
                <label for="number" class="form-label">Price</label>
                <input type="number" value="<%= listing.price %>" name="price" class="form-control" required>
                <div class="invalid-feedback">Please enter correct Price</div>
            </div>
    
            <div class="md-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input type="text" value="<%= listing.country %>" name="country" class="form-control" required>
                <div class="invalid-feedback">Please enter correct country</div>
            </div>
        </div>
        <div class="md-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" value="<%= listing.location %>" name="location" class="form-control" required>
            <div class="invalid-feedback">Please enter correct Location</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
    </div>
</div>

